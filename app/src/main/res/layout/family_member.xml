<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<ImageView
		android:id="@+id/imgMemberPortrait"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/user"
		tools:srcCompat="@tools:sample/avatars" />
	
	<TextView
		android:id="@+id/txtMemName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="TextView"
		app:layout_constraintEnd_toEndOf="@+id/imgMemberPortrait"
		app:layout_constraintStart_toStartOf="@+id/imgMemberPortrait"
		app:layout_constraintTop_toBottomOf="@+id/imgMemberPortrait" />
	
	<TextView
		android:id="@+id/txtMemDates"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:text="TextView"
		app:layout_constraintEnd_toEndOf="@+id/txtMemName"
		app:layout_constraintStart_toStartOf="@+id/txtMemName"
		app:layout_constraintTop_toBottomOf="@+id/txtMemName" />
	
	<TextView
		android:id="@+id/txtMemOther"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="TextView"
		app:layout_constraintEnd_toEndOf="@+id/txtMemDates"
		app:layout_constraintStart_toStartOf="@+id/txtMemDates"
		app:layout_constraintTop_toBottomOf="@+id/txtMemDates" />
</androidx.constraintlayout.widget.ConstraintLayout>